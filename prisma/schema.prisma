model User {
  Id_Utilisateur   Int        @id @default(autoincrement())
  Civilite         String
  Pseudo           String     
  Prenom           String     
  Nom              String     
  Email            String     @unique
  Mdp              String    
  Latitude         Float
  Longitude        Float
  Ville            String
  Botanniste       Boolean    @default(false)
  Annonces         Annonce[]
  Image            String     @default("")
